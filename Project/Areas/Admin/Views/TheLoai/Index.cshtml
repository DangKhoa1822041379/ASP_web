
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <form asp-action="Search" method="get">
    <input type="text" name="searchString" placeholder="Nhập thể loại cần tìm..."
           value="@ViewBag.SearchString"/>
    <input type="submit" value="Tìm kiếm"/>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>Tên thể loại</th>
                <th>Ngày tạo</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in ViewBag.TheLoai)
            {
                
                <tr>
                    <td width="30%"> @item.Name</td>

                    <td width="30%"> @String.Format("{00:dd/MM/yyyy}", item.DateCreated)</td>

                    <td width="40%">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Detail" asp-route-id="@item.Id">Detail</a> |
                        <a href="#" onclick="confirmDelete(@item.Id, $(this))">Delete</a>
                    </td>
                    
                </tr>              
            }
    </tbody>
</table>
    <a asp-controller="TheLoai" asp-action="Create" class="btn btn-primary">Thêm mới </a>
</div>
<script>
    function confirmDelete(id, row)
    {
        if(confirm("Bạn có chắc chắn muốn xóa thể loại có id là" + id + "?"))
        {
            xoa(id, $(row))
        }
    }
    function xoa(idx, row)
    {
        $.ajax({
            url: `TheLoai/Delete`,
            data: {id: idx},
            type: "POST",
            success: function(data){
                row.closest("tr").remove();
            }
        })
    }
</script>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}