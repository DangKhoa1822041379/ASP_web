@model BaiKiemTra03_03.Models.Contract

@{
    ViewData["Title"] = "Tạo mới hợp đồng";
}

<h1>@ViewData["Title"]</h1>

<h4>Thông tin hợp đồng</h4>
<hr />

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ContractName" class="control-label">Tên hợp đồng</label>
        <input asp-for="ContractName" class="form-control" />
        <span asp-validation-for="ContractName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SigningDate" class="control-label">Ngày ký</label>
        <input asp-for="SigningDate" class="form-control" />
        <span asp-validation-for="SigningDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustomerId" class="control-label">Khách hàng</label>
        <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="ContractValue" class="control-label">Giá trị hợp đồng</label>
        <input asp-for="ContractValue" class="form-control" />
        <span asp-validation-for="ContractValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
