@model LopHoc

<div class="container">
    <h3> Thêm lớp học</h3>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="TenLopHoc"> Tên lớp học </label>
            <input asp-for="TenLopHoc" type="text" class="form-control" />
            <span asp-validation-for="TenLopHoc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NamRaTruong"> Ngày tạo </label>
            <input asp-for="NamRaTruong" type="date" class="form-control" />
            <span asp-validation-for="NamRaTruong" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary"> Tạo mới</button>
    </form>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}